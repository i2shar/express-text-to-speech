#!/bin/bash

BIN_DIR=`dirname $0`
BASE_DIR=${BIN_DIR}/..
LOG_DIR_NAME=log
FOREVER_CMD=node_modules/forever/bin/forever
PID_FILE_NAME=speech.pid
cd ${BASE_DIR}


function print_env() {
    echo ${BIN_DIR}
    echo ${BASE_DIR}
    echo ${LOG_DIR_NAME}
    echo ${FOREVER_CMD}
    echo ${PID_FILE_NAME}
}

function print_usage() {
    echo "Usage: server command"
    echo "where command is one of:"
    echo "  start               starts the server"
    echo "  stop                stops the server"
    echo "  status              prints the status"
    echo "  env                 prints the environment"

}


function startServer() {
    if [[ ! -e ${LOG_DIR_NAME} ]]; then
        mkdir ${LOG_DIR_NAME}
    fi

    FOREVER_ARGS="-m 1 -a --minUptime 5000 --spinSleepTime 5000 -p . -l log/forever.log -o log/out.log -e log/err.log"
    ${FOREVER_CMD} ${FOREVER_ARGS} start --uid 'express-tts-server' app.js
}

function stopServer() {
    ${FOREVER_CMD} stop app.js
}

function printStatus() {
    ${FOREVER_CMD} list
}

if [ $# = 0 ]; then
    print_usage
    exit
fi


COMMAND=$1

case ${COMMAND} in

    start)
        startServer
        exit
    ;;

    env)
        print_env
        exit
    ;;

    stop)
        stopServer
        exit
    ;;

    status)
        printStatus
        exit
    ;;

    restart)
        stopServer
        startServer
    ;;

    *)
        print_usage
        exit
    ;;

esac


